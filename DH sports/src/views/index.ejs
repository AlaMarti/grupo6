<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head') %> 
    <title>DH Sports</title>
    <link rel="stylesheet" href="css/index.css">
    <script src="js/carousel.js" defer></script>
</head>

<body>
    <header>
        <%- include('./partials/header') %>
    </header>

    <section aria-label="Newest Photos">
        <div class="carousel" data-carousel>
            <button class="carousel-button prev" data-carousel-button="prev">&#8678;</button>
            <button class="carousel-button next" data-carousel-button="next">&#8680;</button>
            <ul data-slides>
                <li class="slide" data-active>
                    <img src="images/Campeon1.jpg" alt="Campeones #1">
                </li>
                <li class="slide">
                    <img src="images/Campeon2.jpg" alt="Campeones #2">
                </li>
                <li class="slide">
                    <img src="images/Campeon3.jpg" alt="Campeones #3">
                </li>
            </ul>
        </div>
    </section>

    <div class="categorias">
        <div class="start-icon"><i class="fa-solid fa-futbol fa-border fa-2xl"></i></div>
        <div class="start-icon"><i class="fa-solid fa-basketball fa-border fa-2xl" style="color:#F29544;"></i></div>
        <div class="start-icon"><i class="fa-solid fa-football fa-border fa-2xl" style="color:#A6695B;"></i></div>
        <div class="start-icon"><i class="fa-solid fa-baseball fa-border fa-2xl" style="color:#ABD904"></i></div>
    </div>

    <main>
        
        <a href="./products" style="color: black;"><button type="submit" class="ver-todo">Ver todo<i class="fa-solid fa-arrow-right"></i></button></a>
        <h2 class="titulo">Popular</h2>
        <div class="articulos">
            <% products.forEach(product => {  %> 
            <a href="./products/detail/<%= product.id %>">
                <div class="contenedor-art">
                    <img width="250px" height="290px" src="images/products/<%= product.imagen %>">
                    <p class="nombre-art"><%= product.nombre %></p>
                    <div class="descrip-art">
                        <div class="precio">$<%= product.precio %></div>
                        <% if (product.descuento > 0) { %> 
                            <div class="descuento"><%= product.descuento %>% OFF</div>
                        <% } %>                         
                        <span style="color:#F24968;"><i class="fa-regular fa-heart fa-2xl"></i></span>
                    </div>
                </div>
            </a>
            <% }) %>         
        </div>  

        <h2 class="titulo">Ofertas</h2>
        <button type="submit" class="ver-todo"><a href="./products" style="color: black;">Ver todo</a>  <i class="fa-solid fa-arrow-right"></i></button>

        <div class="articulos">
            <% products.filter(product => product.descuento > 0).forEach(product => { %>
                <a href="./products/detail/<%= product.id %>">
                    <div class="contenedor-art">
                        <img width="250px" height="290px" src="images/products/<%= product.imagen %>">
                            <p class="nombre-art"><%= product.nombre %></p>
                        <div class="descrip-art">
                            <p class="precio"><%= product.precio %></p>
                            <% if (product.descuento > 0) { %> 
                                <div class="descuento"><%= product.descuento %>% OFF</div>
                            <% } %> 
                            <span style="color:#F24968;"><i class="fa-regular fa-heart fa-2xl"></i></span>
                        </div>
                    </div>
                </a>
            <% }) %> 
        </div>  

    </main>


    <footer class="footer">
        <%- include('./partials/footer') %> 
    </footer>
</body>
</html>