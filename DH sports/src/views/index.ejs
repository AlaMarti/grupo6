    <img class="banner" width="100%" src="images/banner.jpg">

    <div class="categorias">
        <div class="start-icon"><i class="fa-solid fa-futbol fa-border fa-2xl"></i></div>
        <div class="start-icon"><i class="fa-solid fa-basketball fa-border fa-2xl" style="color:#F29544;"></i></div>
        <div class="start-icon"><i class="fa-solid fa-football fa-border fa-2xl" style="color:#A6695B;"></i></div>
        <div class="start-icon"><i class="fa-solid fa-baseball fa-border fa-2xl" style="color:#ABD904"></i></div>
    </div>

    <main>

        <h2 class="titulo">Popular</h2>
        <button type="submit" class="ver-todo">Ver todo <i class="fa-solid fa-arrow-right"></i></button>

        <div class="articulos">
            <a href="http://localhost:3000/productdetail">
                <div class="contenedor-art">
                    <img width="250px" height="290px" src="images/Camiseta-Argentina.png">
                        <p class="nombre-art">Camiseta Argentina</p>
                    <div class="descrip-art">
                        <div class="precio">$17.000</div>
                        <div class="descuento">20%</div>
                        <span style="color:#F24968;"><i class="fa-regular fa-heart fa-2xl"></i></span>
                    </div>
                </div>
            </a>

            <div class="contenedor-art">
                <img width="250px" height="290px" src="images/pelota.jpg">
                    <p class="nombre-art">Pelota Al Rihla</p>
                <div class="descrip-art">
                    <p class="precio">$10.000</p>
                    <span style="color:#F24968;"><i class="fa-regular fa-heart fa-2xl"></i></span>
                </div>
            </div>

            <div class="contenedor-art">
                <img width="250px" height="290px" src="images/running.jpg">
                    <p class="nombre-art">Zapatillas running</p>
                <div class="descrip-art">
                    <p class="precio">$20.000</p>
                    <p class="descuento">5%</p>
                    <span style="color:#F24968;"><i class="fa-regular fa-heart fa-2xl"></i></span>
                </div>
            </div>

            <div class="contenedor-art">
                <img width="250px" height="290px" src="images/Hockey.jpg">
                    <p class="nombre-art">Palo hockey</p>
                <div class="descrip-art">
                    <p class="precio">$9.000</p>
                    <span style="color:#F24968;"><i class="fa-regular fa-heart fa-2xl"></i></span>
                </div>
            </div>
        </div>

        <h2 class="titulo">Visto recientemente</h2>
        <button type="submit" class="ver-todo">Ver todo <i class="fa-solid fa-arrow-right"></i></button>
        <div class="articulos">
            <% products.filter(product => product.estado == "visto").forEach(product => { %> 
            <div class="contenedor-art">
                <img width="250px" height="290px" src="images/<%= product.image %> ">
                    <p class="nombre-art"><%= product.name %></p>
                <div class="descrip-art">
                    <p class="precio"><%= product.price %> </p>
                    <p class="descuento"><%= product.discount %> </p>
                    <span style="color:#F24968;"><i class="fa-regular fa-heart fa-2xl"></i></span>
                </div>
            </div>
            <% }) %>        
        </div>
        
        <h2 class="titulo">Novedades</h2>
        <button type="submit" class="ver-todo">Ver todo <i class="fa-solid fa-arrow-right"></i></button>

        <div class="articulos">
            <% products.forEach(product => { %>
            <div class="contenedor-art">
                <img width="250px" height="290px" src="images/<%= product.image %>">
                    <p class="nombre-art"><%= product.name %></p>
                <div class="descrip-art">
                    <p class="precio"><%= product.price %></p>
                    <p class="descuento"><%= product.discount %></p>
                    <span style="color:#F24968;"><i class="fa-regular fa-heart fa-2xl"></i></span>
                </div>
            </div>
            <% }) %> 
        </div>  

        <h2 class="titulo">Ofertas</h2>
        <button type="submit" class="ver-todo">Ver todo <i class="fa-solid fa-arrow-right"></i></button>

        <div class="articulos">
            <% products.filter(product => product.discount > 0).forEach(product => { %>
            <div class="contenedor-art">
                <img width="250px" height="290px" src="images/<%= product.image %>">
                    <p class="nombre-art"><%= product.name %></p>
                <div class="descrip-art">
                    <p class="precio"><%= product.price %></p>
                    <p class="descuento"><%= product.discount %></p>
                    <span style="color:#F24968;"><i class="fa-regular fa-heart fa-2xl"></i></span>
                </div>
            </div>
            <% }) %> 
        </div>  

    </main>


