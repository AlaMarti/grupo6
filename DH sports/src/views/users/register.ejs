<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head') %>    
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Registro de usuario</title>
    <link rel="stylesheet" href="../css/index.css">
    <link href="../css/register.css" rel="stylesheet">

</head>

<body>  
    <header> 
        <%- include('../partials/header') %> 
    </header>
    <main>
        <h4>Registrarme</h4>
        <div class="register-form">
            <form action="/users/register" method="POST" enctype="multipart/form-data">                
                <div class="Padre">                    
                    <div class="nombre"> 
                        <label for="nombre">Nombre</label>
                        <input type="text" name="nombre" id="nombre" value="<%= locals.oldData ? oldData.nombre : null%> ">
                        <% if (locals.errors && errors.nombre) { %> 
                            <div class="text-danger">
                                <%= errors.nombre.msg %> 
                            </div>
                        <% } %>
                        <span class="feedback"></span>  
                    </div>                    
                    <div class="nombre">                        
                        <label for="apellido">Apellido</label>
                        <input type="text" name="apellido" id="apellido" value="<%= locals.oldData ? oldData.apellido : null%> ">
                        <% if (locals.errors && errors.apellido) { %> 
                            <div class="text-danger">
                                <%= errors.apellido.msg %> 
                            </div>
                        <% } %>
                        <span class="feedback"></span>                        
                    </div>                    
                    <div class="nombre">                        
                        <label for="dni">DNI</label>
                        <input type="number" name="dni" id="dni" value="<%= locals.oldData ? oldData.dni : null%> ">
                        <% if (locals.errors && errors.dni) { %> 
                            <div class="text-danger">
                                <%= errors.dni.msg %> 
                            </div>
                        <% } %> 
                        <span class="feedback"></span>                        
                    </div>                    
                    <div class="nombre">                       
                        <label for="email">Email</label>
                        <input type="email" name="email" id="email" value="<%= locals.oldData ? oldData.email : null%> ">
                        <% if (locals.errors && errors.email) { %> 
                            <div class="text-danger">
                                <%= errors.email.msg %> 
                            </div>
                        <% } %>
                        <span class="feedback"></span>                        
                    </div>                    
                    <div class="nombre">                        
                        <label for="fecha">Fecha de Nacimiento</label>
                        <input type="date" name="fecha" style="text-align: center;" value="<%= locals.oldData ? oldData.fecha : null%> ">
                        <% if (locals.errors && errors.fecha) { %> 
                            <div class="text-danger">
                                <%= errors.fecha.msg %> 
                            </div>
                        <% } %> 
                        <span class="feedback"></span>                        
                    </div>                   
                    <div class="nombre">                        
                        <label for="password">Contraseña</label>
                        <input type="password" name="password" value="<%= locals.oldData ? oldData.password : null%> ">
                        <% if (locals.errors && errors.password) { %> 
                            <div class="text-danger">
                                <%= errors.password.msg %> 
                            </div>
                        <% } %> 
                        <span class="feedback"></span>                        
                    </div>
                    <div class="nombre">                        
                        <label for="repitpassword">Repetir Contraseña</label>
                        <input type="password" name="repitpassword" value="<%= locals.oldData ? oldData.repitpassword : null%> ">
                        <% if (locals.errors && errors.repitpassword) { %> 
                            <div class="text-danger">
                                <%= errors.repitpassword.msg %> 
                            </div>
                        <% } %> 
                        <span class="feedback"></span>                        
                    </div>
                    <div class="nombre">                        
                        <label for="avatar">Imagen de perfil</label>
                        <input type="file" name="avatar">
                        <% if (locals.errors && errors.avatar) { %> 
                            <div class="text-danger">
                                <%= errors.avatar.msg %> 
                            </div>
                        <% } %> 
                        <span class="feedback"></span>                        
                    </div>    
                </div>                
                <div class="boton">                    
                    <input type="submit" value="Crear mi cuenta">                   
                </div>
                <div class="link">
                    <a href="login">¿Ya estás registrado?</a>
                </div>
            </form>
        </div>
        </main>
        <footer class="footer">
        <%- include('../partials/footer') %> 
        </footer>
    </body>
    </html>